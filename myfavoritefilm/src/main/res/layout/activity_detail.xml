<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.belajar.trydev.myfavoritefilm.DetailActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="233dp"
        tools:src="@color/colorAccent"
        android:id="@+id/image_backdrop"
        />

    <ImageView
        tools:src="@color/cardview_shadow_start_color"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_alignBottom="@id/image_backdrop"
        android:id="@+id/image_poster" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Minions"
        android:layout_toEndOf="@id/image_poster"
        android:layout_marginTop="130dp"
        android:shadowColor="#000"
        android:textColor="#fff"
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:id="@+id/title_detail"
        />
    <TextView
        android:textColor="#fff"
        android:textSize="20sp"
        tools:text="2016"
        android:id="@+id/tahun"
        android:layout_below="@id/title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_poster"
        />
    <TextView
        android:id="@+id/description"
        android:layout_below="@id/image_backdrop"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        tools:text="lalalalalalalalalalala"
        android:textColor="#000"
        android:padding="@dimen/activity_horizontal_margin"
        android:textSize="16sp"
        android:layout_height="match_parent" />
</RelativeLayout>
